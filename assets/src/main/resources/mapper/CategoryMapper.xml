                and (`path` like CONCAT(#{queryPath},'%'))
            </if>
            <if test="state !=null and state !=''">
                and `state`=#{state}
            </if>
            <if test="parent !=null">
                and `parent`=#{parent}
            </if>
             <if test="ids !=null">
